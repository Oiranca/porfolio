---
import { Menu, X } from 'lucide-astro';
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-slate-200">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center h-16">
      <a 
        href="#home" 
        class="text-xl font-bold text-slate-900 hover:text-blue-600 transition-colors"
        aria-label="Ir a la sección de inicio"
      >
        Portafolio
      </a>
      
      <div class="hidden md:flex space-x-8">
        <a 
          href="#about" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium"
        >
          Acerca de
        </a>
        <a 
          href="#projects" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium"
        >
          Proyectos
        </a>
        <a 
          href="#collaboration" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium"
        >
          Colaboraciones
        </a>
        <a 
          href="#skills" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium"
        >
          Habilidades
        </a>
        <a 
          href="#contact" 
          class="bg-blue-600 text-white px-3 py-1.5 rounded-md hover:bg-blue-700 transition-colors font-medium text-sm"
        >
          Contacto
        </a>
      </div>
      
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-slate-700 hover:text-blue-600 hover:bg-slate-100 transition-colors"
        aria-label="Abrir menú móvil"
        aria-expanded="false"
      >
        <Menu size={24} id="menu-icon" />
        <X size={24} id="close-icon" class="hidden" />
      </button>
    </div>
    
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a 
          href="#about" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium py-2"
        >
          Acerca de
        </a>
        <a 
          href="#projects" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium py-2"
        >
          Proyectos
        </a>
        <a 
          href="#collaboration" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium py-2"
        >
          Colaboraciones
        </a>
        <a 
          href="#skills" 
          class="text-slate-700 hover:text-blue-600 transition-colors font-medium py-2"
        >
          Habilidades
        </a>
        <a 
          href="#contact" 
          class="bg-blue-600 text-white px-3 py-1.5 rounded-md hover:bg-blue-700 transition-colors font-medium text-sm text-center"
        >
          Contacto
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('hidden');
    
    if (isOpen) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'true');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
    }
  });
  
  document.addEventListener('click', (e) => {
    const target = e.target as Element;
    if (!target.closest('nav') && !mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
    }
  });
</script>